<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SidesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/sidesLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sides_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <ImageView
            android:id="@+id/sidesImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/fries"
            android:contentDescription="@string/sides_image_description"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/sideTypeLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/side_type_label"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/sideTypeSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/sidesSizeLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/size_label"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/sizeGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/smallRB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/small_size"
                android:checked="true"
                android:layout_weight="1" />

            <RadioButton
                android:id="@+id/mediumRB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/medium_size"
                android:layout_weight="1" />

            <RadioButton
                android:id="@+id/largeRB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/large_size"
                android:layout_weight="1" />
        </RadioGroup>

        <TextView
            android:id="@+id/sidesQuantityLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/quantity_label"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/sidesQuantitySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/sidesPriceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price_label"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/sidesPriceTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_side_price"
                android:textSize="18sp"
                android:layout_weight="1"
                android:gravity="end" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/sidesAddToOrderButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/add_to_order"
                android:layout_weight="1"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/sidesMainMenuButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/main_menu"
                android:layout_weight="1"
                android:layout_marginStart="4dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>