<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ComboActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/comboLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/combo_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/comboSandwichLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sandwich_label"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/comboSandwichTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="8dp"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/comboSideLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/side_type_label"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/comboSideSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <ImageView
            android:id="@+id/comboSideImage"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/fries"
            android:contentDescription="@string/side_image_description"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/comboDrinkLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/drink_flavor_label"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/comboDrinkSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <ImageView
            android:id="@+id/comboDrinkImage"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/coke"
            android:contentDescription="@string/drink_image_description"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/comboQuantityLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/quantity_label"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/comboQuantitySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/comboPriceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price_label"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/comboPriceTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_combo_price"
                android:textSize="18sp"
                android:layout_weight="1"
                android:gravity="end" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/comboAddToOrderButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/add_to_order"
                android:layout_weight="1"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/comboMainMenuButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/main_menu"
                android:layout_weight="1"
                android:layout_marginStart="4dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>